<?xml version="1.0" encoding="utf-8"?>

<configuration>
<appSettings>
<!--
El WSGI_HANDLER es el punto de entrada de la aplicación.
'app' es el nombre del archivo (app.py).
El segundo 'app' es el objeto de la aplicación de Flask que se define en tu script.
-->
<add key="WSGI_HANDLER" value="app.app" />
<add key="PYTHONPATH" value="%SystemDrive%\home\site\wwwroot" />
</appSettings>
<system.webServer>
<handlers>
<add name="PythonHandler" path="" verb="" modules="httpPlatformHandler" resourceType="Unspecified" requireAccess="Script" />
</handlers>
<httpPlatform processPath="D:\home\python365x64\python.exe"
arguments="%WSGI_HANDLER%"
stdoutLogEnabled="true"
stdoutLogFile="D:\home\LogFiles\python.log"
startupTimeLimit="60"
requestTimeout="120"
idleTimeout="120">
<environmentVariables>
<!-- Las variables de entorno para Azure se configuran en el Portal de Azure. -->
</environmentVariables>
</httpPlatform>
</system.webServer>
</configuration>